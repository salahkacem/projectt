            <h2 class="font-weight-bold text-center pt-5">Result Vols</h2>

<div class="container" style="padding-top:100px">

    <table class="table" border="1" >


                <% if (vols.length > 0) { %>
                  <% vols.map((item,index)=>{ %>

      <tr>
        <th scope="col"><%= item.startPlace %></th>
        <th scope="col"><%= item.distination %> </th>
          <th><%= item.date %></th>
        <th scope="col"><%= item.price %> DT</th>
        <th scope="col"><%= item.return?'Return':'Go' %></th>
                            <% if (!user) { %>
                                    <th scope="col"><a href="/login" class="btn btn-sm btn-warning">Login to Reserve this flight</a></th>
                            <% }else{ %>
                                    <th scope="col"><a href="/reservationVolAction/<%= item._id %>" class="btn btn-sm btn-warning">Reserve this flight</a></th>
                            <% } %>


       
      </tr>
                        <%  }) %>
                              <% } else { %>
                                  <tr>
                                      <td>No data found</td>
                                  </tr>
                                  <% } %>

      </table>


</div>




