            <% if (!user) { %>

            <form class="d-flex">
              <button class="btn btn-secondary my-2 my-sm-0" type="submit"><a href='/signup' >Signup</a></button>
              </form>
              <form class="d-flex" style="padding-left:20px">
              <button class="btn btn-secondary my-2 my-sm-0" type="submit"><a href='/login' >Login</a></button>
            </form>

            <%  }else{ %>
<div class="row">
  <div class="col-2">
    <div class="avatar avatar-img">
      <img  style="width: 50px;height: 50px;" src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="user" class="avatar-img rounded-circle">
