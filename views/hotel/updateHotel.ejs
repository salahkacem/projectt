<div class="content-container">

  <div class="container-fluid">
<div class="card" >
    <div class="card-header">
        <h4 class="font-weight-bold">Update Hotel</h4>
    </div>
    <div class="card-body">
        <form action ='/admin/updateHotelAction/<%= hotel._id %>' method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="name">Name</label>
                        <input type="text" class="form-control" value="<%= hotel.name %>" name="name" placeholder="Name" id="name">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="description">Description</label>
                        <input type="text" class="form-control" value="<%= hotel.description %>" name="description" placeholder="Description" id="description">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label for="adresse">Price</label>
                        <input type="number" class="form-control" value="<%= hotel.price %>" name="price" id="price" placeholder="Price" />
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label for="adresse">Rate</label>
                        <input type="number" class="form-control" value="<%= hotel.rate %>" name="rate" id="rate" placeholder="Rate" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="place">Place</label>
                        <input type="text" class="form-control" value="<%= hotel.place %>" name="place" placeholder="Place" id="place">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="image">Image</label>
                        <input type="text" class="form-control" value="<%= hotel.image %>" name="image" placeholder="Image Url" id="image">
                    </div>
                </div>
            </div>
            <div class="">
                <button type="submit"  class="btn btn-success"> Update</button>
                <a href="/" class="btn btn-light">Cancel</a>        
            </div>     
        </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
