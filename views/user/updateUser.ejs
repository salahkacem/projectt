        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/navbar.css" type="text/css">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
       
    </head>
<body>


<div class="card" >

<div class="sidebar-container">
  <div class="sidebar-logo">
    Project Name
  </div>
  <ul class="sidebar-navigation">
    <li>
      <a href="#">
        <i class="fa fa-home" aria-hidden="true"></i> Dashboard
      </a>
    </li>
    <li>
      <a href="/admin/users">
        <i class="fa fa-users" aria-hidden="true"></i> Users
      </a>
    </li>
        <li>
          <a href="/admin/hotels">
            <i class="fa fa-hotel" aria-hidden="true"></i> Hotels
          </a>
        </li>
            <li>
              <a href="/admin/vols">
                <i class="fa fa-plane" aria-hidden="true"></i> Travel
              </a>
            </li>
  </ul>
</div>

<div class="content-container">

  <div class="container-fluid">
    <div class="card-header">
        <h4 class="font-weight-bold">Update Customer</h4>
    </div>
    <div class="card-body">
        <form action ='/admin/updateUser/<%= customer._id %>' method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="firstname">First Name</label>
                        <input type="text" class="form-control" name="firstname" value='<%= customer.firstname %>' placeholder="enter first name" id="firstname">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="lastname">Last Name</label>
                        <input type="text" class="form-control" name="lastname" value="<%= customer.lastname %>" placeholder="enter last name" id="lastname">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label for="adresse">Email</label>
                        <input class="form-control" name="address" id="email" value="<%= customer.email %>"/>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="phonenumber">Phone Number</label>
                        <input type="number" class="form-control" name="phonenumber" value="<%= customer.phonenumber %>" placeholder="enter your phone number" id="phonenumber">
                    </div>
                </div>
                <div class="col-6">
                    <select class="form-select" name="role" aria-label="Default select example" >
                        <option value="admin" selected=<%= customer.role  == 'admin' ? true : false %> >Admin</option>
                        <option value="user" selected=<%= customer.role == 'user' ? true : false %>>User</option>
                    </select>
                </div>

            </div>  
            <div class="">
                <button type="submit"  class="btn btn-success"> Update</button>
                <a href="/" class="btn btn-light">Cancel</a>        
            </div>     
        </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body></html>

